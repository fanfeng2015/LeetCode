package pow;

public class Pow {

	public double myPow(double x, int n) {
		if (n == 0) {
			return 1;
		}
		if (n == Integer.MIN_VALUE) {
			return (1 / x) * myPow(x, -n + 1);
		}
		if (n < 0) {
			x = 1 / x;
			n = -n;
		}
		System.out.println(x + ", " + n);
		return (n % 2 == 0) ? myPow(x * x, n / 2) : x * myPow(x * x, n / 2);
	}
	
	// Time complexity is O(n).
	// Space complexity is O(n).
}
