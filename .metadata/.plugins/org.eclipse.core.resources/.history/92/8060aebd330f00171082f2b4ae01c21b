package threeSumSmaller;

import java.util.Arrays;

// LeetCode #259

public class ThreeSumSmaller {

	int count = 0;

	public int threeSumSmaller(int[] nums, int target) {
		Arrays.sort(nums);
		for (int i = 0; i < nums.length - 2; i++) {
			
			int left = begin, right = nums.length - 1;
			while (left < right) {
				if (nums[left] + nums[right] < target) {
					count += (right - left);
					left++;
				} else {
					right--;
				}
			}
			}
		return count;
	}

	private void twoSumSmaller(int[] nums, int target, int begin) {
		int left = begin, right = nums.length - 1;
		while (left < right) {
			if (nums[left] + nums[right] < target) {
				count += (right - left);
				left++;
			} else {
				right--;
			}
		}
	}

}
